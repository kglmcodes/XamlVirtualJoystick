        xmlns:local="clr-namespace:Sample"
        xmlns:wpfCustomControls="clr-namespace:WpfCustomControls;assembly=WpfCustomControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="825">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="joystickInfoLabel"/>
        <wpfCustomControls:OnScreenJoystick Name="onScreenJoystick" Grid.Row="2"/>
    </Grid>
</Window>
